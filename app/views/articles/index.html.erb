<h1>Articles</h1>

<%= link_to 'New Article', new_article_path %>

<% @articles.each do |article| %>
  <div>
    <h2><%= link_to article.title, article_path(article) %></h2>
    <p><%= article.body.truncate(100) %></p>
    <p><%= link_to 'Edit', edit_article_path(article) %> | <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
